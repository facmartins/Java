import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		float n1;
		
		
		Scanner in = new Scanner (System.in);
		
		System.out.print("Insira um número: ");
		n1=in.nextFloat();
		
		if (n1==0)
		{
		System.out.print("O seu número é zero:");
		}
		else
		    if (n1%2==0)
		    {
		      System.out.print("O seu número é par:");
		}
		else
		{ System.out.print("O seu número é par:");
		    
		}
		        
		    
		

	}
}
